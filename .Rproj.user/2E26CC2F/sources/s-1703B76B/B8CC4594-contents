x = rnorm(1000)
y = x+rnorm(1000, sd = 0.4)
data <- data.frame(cbind(x,y))

prediction <- c()
error <- c()

for (i in 1:1000)
{
  sample = sample(1:1000, 30)
  model <- lm(y~x, data = data[sample,])
  error <- c(error, sqrt(deviance(model)/df.residual(model)))
  prediction <- c(prediction, predict(model, newdata = data[1,]))
}